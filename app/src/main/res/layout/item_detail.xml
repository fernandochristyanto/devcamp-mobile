<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:id="@+id/segmen_image">


        <ImageView android:layout_width="match_parent" android:layout_height="400dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:id="@+id/item_id"
                   android:src="@color/cardview_dark_background"

                   tools:layout_editor_absoluteX="0dp"/>
        <Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
                 app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
                 android:background="#CCFF0000">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:src="@drawable/ic_back"

                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                           android:id="@+id/imageView" android:layout_marginStart="4dp"/>
                <ImageView
                        android:layout_width="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="50dp" app:srcCompat="@drawable/ic_share"
                        android:id="@+id/button_share"
                        app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="188dp"
                        app:layout_constraintVertical_bias="0.0"/>

                <ImageView android:layout_width="50dp"
                           android:layout_height="50dp"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/button_share"
                           android:id="@+id/shopping_icon"
                app:srcCompat="@drawable/ic_shopping"/>

                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintLeft_toRightOf="@id/shopping_icon"
                           app:srcCompat="@drawable/ic_more"
                />




            </androidx.constraintlayout.widget.ConstraintLayout>



        </Toolbar>

        <View
                app:layout_constraintBottom_toBottomOf="@id/item_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:id="@+id/separator"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:padding="10dp"
            android:clipToPadding="false"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/segmen_image">


        <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Nama Item"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="30dp" android:id="@+id/nama_item"
                android:gravity="center_vertical"

        />

        <TextView android:layout_width="match_parent" android:layout_height="30dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:text="Harga item"
                  android:textStyle="bold"
                  android:textSize="18sp"
                  android:gravity="center_vertical"
        />

        <TextView android:layout_width="match_parent" android:layout_height="30dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:text="Deksripsi : "
                  android:textStyle="bold"
                  android:textSize="18sp"
                  android:gravity="center_vertical"
        />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Lorem ipsuasdsadasdasdaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaam"
                  android:layout_marginLeft="50dp"
                  android:textSize="15sp"
        />

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginRight="-10dp"
                        android:layout_marginBottom="-15dp">
            <Toolbar android:layout_width="match_parent" android:layout_height="50dp"
                     android:layout_alignParentBottom="true"
                     android:background="#32a852"
                     android:id="@+id/toolbar_bottom"
            >
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                   android:layout_height="match_parent">

                    <ImageView android:layout_width="30dp" android:layout_height="30dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               android:src="@mipmap/ic_launcher_chat"/>

                    <Button android:layout_width="130dp" android:layout_height="30dp"
                        android:gravity="center_horizontal|center_vertical"
                        app:layout_constraintRight_toLeftOf="@id/button_tambahkeranjang"
                        android:text="Beli"
                        android:textSize="10dp"
                        android:background="@drawable/button"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="3dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="5dp"/>
                    <Button
                            app:layout_constraintRight_toRightOf="parent"
                            android:text="Tambah Keranjang"
                            android:layout_marginBottom="3dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button"
                            android:layout_marginRight="5dp"
                            android:textSize="10dp"
                            tools:layout_editor_absoluteX="260dp" android:id="@+id/button_tambahkeranjang"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
